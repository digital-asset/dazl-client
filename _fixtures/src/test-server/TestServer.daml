module TestServer where

import Daml.Script

template Person
  with
    party: Party
  where
    signatory party
    key party: Party
    maintainer key

    nonconsuming choice SayHello : ContractId Message
      with
        receiver: Party
        text: Text
      controller party
        do
          create Message with sender = party; ..

template Message
  with
    sender: Party
    receiver: Party
    text: Text
  where
    signatory sender
    observer receiver